<h2> Product List </h2>

<a href="/products/new"> Add a New Product </a>

<ul>
  <% listOfProducts.forEach((oneProduct) => { %>
    <li>
      <h3> <%= oneProduct.name %> </h3>
      <p> $<%= oneProduct.price %> </p>
      <img src="<%= oneProduct.imageUrl %>" />
      <ul>
        <li>
          <!-- <a href="/products/details?prodId=<%= oneProduct._id %>"> -->

          <a href="/products/<%= oneProduct._id %>">
            View Details
          </a>
        </li>

        <li>
          <a href="/products/<%= oneProduct._id %>/edit">
            Edit
          </a>
        </li>

        <li>
          <a href="/products/<%= oneProduct._id %>/delete">
            Delete (GET)
          </a>
        </li>

        <li>
          <form method="post" action="/products/<%= oneProduct._id %>/delete">
            Delete (POST)
          </form>
        </li>
      </ul>
    </li>
  <% }) %>
</ul>
